    <div class="loginBox" style="font-family:'Luckiest Guy', cursive">
        <img src="https://bit.ly/2Wekzho" class="user">
        <form id="contact" action='/squadList'>
            <h3 id = "green-text">Create A Hero Squad!</h3>

            <label for = "nameOfSquad">

                <input id="nameOfSquad" name="nameOfSquad" placeholder="Squad Name" type="text" tabindex="1" required autofocus>
            </label>
            <label for = "squadMission">

                <input id="squadMission" name="squadMission" placeholder="Squad Cause" type="text" tabindex="2" required>
            </label>
            <label for = "squadSize">
                <input id="squadSize" name="squadSize" placeholder="Number of Members" type="text" tabindex="3" required>
            </label>
            <label for = "">
                <button name="submit" type="submit" id="submit">Create Squad!</button>
            </label>
        </form>
